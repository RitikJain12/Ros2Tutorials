{
    "initializeCommand": "bash -c 'source container_entrypoint.sh'",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "name": "ros2-devcontainer",
    "workspaceFolder": "/ros2_ws",
    "workspaceMount": "source=${localWorkspaceFolder},target=/ros2_ws,type=bind",
    "privileged": true,
    "mounts": [
        "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind",
        "source=${localEnv:HOME}/.Xauthority,target=/root/.Xauthority,type=bind"
    ],
    "containerEnv": {
        "DISPLAY": "${localEnv:DISPLAY}",
        "QT_X11_NO_MITSHM": "1"
        // "NVIDIA_VISIBLE_DEVICES": "all",
        // "NVIDIA_DRIVER_CAPABILITIES": "all"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools-extensions-pack",
                "ms-azuretools.vscode-docker",
                "redhat.vscode-yaml",
                "eamodio.gitlens",
                "ms-vscode.cpptools",
                "redhat.vscode-xml"
            ],
            "settings": {
                "editor.formatOnSave": true,
                "files.autoSave": "afterDelay",
                "workbench.colorCustomizations": {
                    "statusBar.background": "#356b28"
                }
            }
        }
    },
    "runArgs": [
        // "--gpus=all",
        "--network=host",
        "--name=ros2-devcontainer",
        // "--runtime=nvidia",
        "--rm"
    ]
}